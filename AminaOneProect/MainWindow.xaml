<Window x:Class="AminaOneProect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AminaOneProect"
        mc:Ignorable="d"
        Title="Shop Milenium" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="143*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="193*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FFE7FABF" Grid.ColumnSpan="2"></Rectangle>
        <Rectangle Fill="#FFE7FABF" Grid.RowSpan="2"></Rectangle>
       
        <TextBlock Grid.Column="1" x:Name="TitleTb" FontSize="25" 
        HorizontalAlignment="Center" >Shop Milenium</TextBlock>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" Grid.Row="1" Grid.Column="1">
            <WrapPanel  x:Name="ProductWp"/>
        </ScrollViewer>


    </Grid>
</Window>
